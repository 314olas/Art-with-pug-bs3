mixin linkList(items, activeLink)
    ul.nav.navbar-nav
        - for (var i = 0; i < items.length; i++)
            if i == activeLink
                li.nav-item.active
                    a(href="#")= items[i]
            else
                li.nav-item
                    a(href="#")= items[i]

mixin card(obj)
    .row
        each item in obj
            .col-md-4
                .thumbnail
                    .thumbnail-img-top
                        span(class= item.class)
                    .caption
                        .thumbnail-title.text-center
                            h3= item.title
                        .content.text-center
                            p= item.text
                    .text-center
                        a.btn.btn-sm.btn-primary(href="#") Learn more

mixin heading(title, content, theme)
    if theme == undefined
        .common-text-block
            .title-decoration.text-center
                h3= title
            .text-center.default-content-color
                p= content
    else if theme !== undefined
        .common-heading-block
            .title-decoration.text-center.mb-2.primary-title-color
                h3= title
            .text-center.text-success
                p= content
